{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <h1>{{ program.title }}</h1>
    <p>{{ program.synopsis }}</p>
    <p>Catégorie :
        {{ program.category.name }}</p>

    {% for season in program.seasons %}
        <p>{{season.number}}</p>
        <p>{{season.year}}</p>
        <p>{{season.description}}</p>

        <a href="{{ path("program_season_show", { program: program.id, season: season.id }) }}">
            Résumé de la saison
            {{season.number}}
        </a>
    {% endfor %}
    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>{{ actor.firstname }} {{ actor.lastname }} : <a href="{{ path("app_actor_show", { id: actor.id }) }}"> voir la fiche de l'acteur </a></li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>
    </div>
<a href="{{ path('program_index') }}">
        Retour à la liste des programmes</a>{% endblock %}